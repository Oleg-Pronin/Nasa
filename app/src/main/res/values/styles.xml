<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/chip_text</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/cutty_sark</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?cardViewColor</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="TextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>

        <item name="android:textColor">?colorOnPrimary</item>

        <item name="boxBackgroundColor">@color/text_field_background</item>
        <item name="boxStrokeColor">@color/text_field_stroke</item>

        <item name="hintTextColor">@color/text_field_stroke</item>
        <item name="android:textColorHint">?colorOnPrimary</item>
        <item name="errorTextColor">?colorError</item>

        <item name="helperTextTextColor">?colorOnPrimary</item>
        <item name="counterTextColor">?colorOnPrimary</item>

        <item name="endIconTint">?colorOnPrimary</item>
    </style>

    <style name="TextFieldExposedDropdownMenuStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>

        <item name="android:textColor">@color/cutty_sark</item>

        <item name="boxBackgroundColor">@color/text_field_background</item>
        <item name="boxStrokeColor">@color/text_field_stroke</item>

        <item name="hintTextColor">@color/text_field_stroke</item>
        <item name="android:textColorHint">?colorOnPrimary</item>
        <item name="errorTextColor">?colorError</item>

        <item name="helperTextTextColor">?colorOnPrimary</item>
        <item name="counterTextColor">?colorOnPrimary</item>

        <item name="endIconTint">?colorOnPrimary</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
</resources>